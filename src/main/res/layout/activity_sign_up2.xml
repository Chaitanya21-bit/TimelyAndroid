<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/TextInputLout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="INPUT NAME"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        android:background="@android:color/transparent"

        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Edit1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Enter Username:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/TextInputLout1"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/TextInputLout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/UserName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:hint="INPUT USERNAME"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        android:background="@android:color/transparent"

        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Edit2"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/UniRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="University Roll No."
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/TextInputLout2"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/TextInputLout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/UniRoll"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:hint="Eg. 3001**********"
        android:inputType="number"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        android:background="@android:color/transparent"

        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Edit3"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Semester:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/TextInputLout3"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/TextInputLout4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TextInputLout3"
        android:layout_toRightOf="@+id/Semester"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@android:dimen/notification_large_icon_height"

        android:layout_marginEnd="10dp"
        android:hint="Eg. 3"
        android:inputType="number"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        android:background="@android:color/transparent"

        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Edit4"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Section:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/TextInputLout4"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/TextInputLout5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TextInputLout4"
        android:layout_toRightOf="@+id/Section"
        android:layout_marginStart="43dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:hint="Eg. E"
        android:inputType="number"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        android:background="@android:color/transparent"

        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Edit5"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/Class_Roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Class Roll:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/Section"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/TextInputLout6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TextInputLout5"
        android:layout_toEndOf="@+id/Class_Roll"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:hint="Eg. 13"
        android:inputType="number"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        android:background="@android:color/transparent"

        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Edit6"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Submit"
        style="@style/LogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Class_Roll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:boxCornerRadiusBottomEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusBottomStart="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopEnd="@android:dimen/app_icon_size"
        app:boxCornerRadiusTopStart="@android:dimen/app_icon_size"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Submit"
        android:text="Page 2 of 2"
        android:textSize="15sp"
        />




</RelativeLayout>