<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/Blue1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/nav_mainlogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/color_logo" />
    <TextView
        android:id="@+id/nav_applogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/timely"
        android:layout_below="@+id/nav_mainlogo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:letterSpacing="0.1"

        android:layout_marginTop="5dp"
        android:fontFamily="@font/collinas"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/nav_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/nav_applogo"
        android:src="@drawable/profile"
        />

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_applogo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/nav_img"

        android:text="Hello name"
        android:textSize="20dp"
        android:textColor="@color/white"
        />
</RelativeLayout>