<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_margin="10dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/Blue3"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/Main_Day"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/day"
            android:textAlignment="center"
            android:textColor="@color/Blue1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Main_period1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/Main_Day"
            android:text="@string/period_1"
            android:textAlignment="center"
            android:textColor="@color/Blue1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Main_period2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/Main_period1"
            android:text="@string/period_2"
            android:textAlignment="center"
            android:textColor="@color/Blue1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Main_period3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/Main_period2"
            android:text="@string/period_3"
            android:textAlignment="center"
            android:textColor="@color/Blue1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Main_period4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/period_4"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/Blue1"
            android:layout_toEndOf="@+id/Main_period3"
            />

        <TextView
            android:id="@+id/Main_period5"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/Main_period4"
            android:text="@string/period_5"
            android:textAlignment="center"
            android:textColor="@color/Blue1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Main_period6"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/period_6"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/Blue1"
            android:layout_toEndOf="@+id/Main_period5"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>