<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorOnPrimary"
        >

        <ImageView
            android:id="@+id/Profile_Pic"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/profile"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Main_card"
            style="@style/CustomCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="320dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Profile_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="PROFILE"
                    android:textColor="@color/Blue1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_pen" />

                <LinearLayout
                    android:id="@+id/Profile_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_heading"
                    android:layout_centerVertical="true"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_txtName"

                        android:fontFamily="@font/cambo"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Profile_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_Name"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="Username: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_Username"

                        android:fontFamily="@font/cambo"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Profile_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_Username"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="Email: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_email"

                        android:fontFamily="@font/cambo"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Profile_URN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_Email"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_URN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="University Roll No.: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainURN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_Urn"

                        android:fontFamily="@font/cambo"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Profile_CLassRoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_URN"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_CLassRoll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="Class Roll No.: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_CLassRoll"

                        android:fontFamily="@font/cambo"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Profile_SEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_CLassRoll"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_Sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="Section: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_Sec"

                        android:fontFamily="@font/cambo"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Profile_Sem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_SEC"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/button_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/P_Sem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/arima_madurai_bold"
                        android:text="Semester: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MainSemester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/P_Sem"

                        android:fontFamily="@font/cambo"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>
</FrameLayout>