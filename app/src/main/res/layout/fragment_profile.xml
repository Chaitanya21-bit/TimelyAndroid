<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motionlayout"
    app:layoutDescription="@xml/fragment_profile_scene">

    <ImageView
        android:id="@+id/Profile_Pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/MainUserName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Profile_Pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236dp"
        android:fontFamily="serif-monospace"
        android:hint="Username"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Profile_Pic"
        />

    <TextView
        android:id="@+id/P_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="      Profile Data-----------------------------"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainUserName" />

    <EditText
        android:id="@+id/MainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:fontFamily="@font/cambo"
        android:text="NAME"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_head" />

    <LinearLayout
        android:id="@+id/Profile_PersonalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainName"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_head">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/cambo"
            android:text="Branch"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MainBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/cambo"
            android:text="CSE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/cambo"
            android:text="Sem"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MainSemester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/P_Sem"
            android:fontFamily="@font/cambo"
            android:text="4th"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MainGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/P_Sem"
            android:fontFamily="@font/cambo"
            android:text="Male"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--    End mai algin karna hai -->
        <!--            Right side mai jo bhi rakhna hai vo iss linear layout mai hai-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/MainSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainName"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/P_Sec"

                android:fontFamily="@font/cambo"
                android:text="A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/MainClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/P_CLassRoll"
                android:fontFamily="@font/cambo"
                android:text="54"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/P_contactinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Profile_PersonalDetails"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:text="      Contact Info-----------------------------"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_PersonalDetails" />


    <EditText
        android:id="@+id/MainEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/P_contactinfo"
        android:fontFamily="@font/cambo"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_contactinfo" />

    <EditText
        android:id="@+id/MainPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainEmail"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cambo"
        android:text="1234567890"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainEmail" />

    <TextView
        android:id="@+id/P_clginfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainPhone"
        android:layout_margin="10dp"
        android:text="      College Info-----------------------------"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainPhone" />

    <EditText
        android:id="@+id/MainURN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/P_clginfo"
        android:fontFamily="@font/cambo"
        android:text="URN"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_clginfo" />

    <EditText
        android:id="@+id/MainEnroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainURN"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cambo"
        android:text="Enroll"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainURN" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Swipe Up to Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainEnroll" />



</androidx.constraintlayout.motion.widget.MotionLayout>